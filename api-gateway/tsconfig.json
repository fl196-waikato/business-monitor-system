{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",        // 编译输出到 dist 目录
    "rootDir": "./src",        // 源代码在 src 目录
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],     // 包含 src 下所有文件
  "exclude": ["node_modules", "dist"]  // 排除这些目录
}